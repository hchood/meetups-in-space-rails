<h3>New Meetup</h3>

<% if @meetup.errors.any? %>
  <p><%= "#{@meetup.errors.count} error(s) prevented your record from being saved:" %></p>
  <ul>
    <% @meetup.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @meetup do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
